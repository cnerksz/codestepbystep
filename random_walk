def random_walk():
    position=0
    max=0
    true=True
    while true:
        dec=random.randrange(1,3)
        print("position =",position)
        if dec==1:
            position-=1
        else:
            position+=1
        if position==3 or position==-3:
            true=False
            print("position =",position)
        if position>max:
            max=position
       
    print("max position =",max)    
