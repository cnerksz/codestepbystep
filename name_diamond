def name_diamond(a):
    n=0
    for i in range(0,len(a)):
        t=i+1
        for j in range(0,t):
            print(a[j],end="")
        print()
    for k in range(1,len(a)):
        l=k
        print(l*" ",end="")
        l=k+1
        n+=1
        for y in range(n,len(a)):
            print(a[y],end="")
        print()


